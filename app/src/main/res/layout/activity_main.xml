<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:text="@string/hello"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="129dp" android:layout_marginStart="129dp" android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toTopOf="@+id/tapHere" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="155dp" android:layout_marginRight="155dp"/>
    <Button
            android:text="@string/tap_here"
            android:layout_width="142dp"
            android:layout_height="55dp"
            android:id="@+id/tapHere" android:layout_marginEnd="158dp" android:layout_marginRight="158dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="196dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="131dp" android:layout_marginStart="131dp" android:layout_marginBottom="317dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <ImageView
            android:layout_width="218dp"
            android:layout_height="189dp" app:srcCompat="@drawable/b31512fadd7af47b9cabe402f9cdb1cd"
            android:id="@+id/imageView" android:layout_marginTop="416dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="173dp" android:layout_marginRight="173dp" android:layout_marginBottom="41dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="29dp" android:layout_marginStart="29dp" android:scaleType="fitXY"/>
</android.support.constraint.ConstraintLayout>